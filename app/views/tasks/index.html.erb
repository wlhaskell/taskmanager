<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<div class="row">
  <div class="col-md-6">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Due</th>
          <th>Scheduled</th>
          <th>Complete</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody id="tasks">
        <%= render @tasks %>
      </tbody>
    </table>
  </div>
  <div class ="col-md-6">
    <%= link_to 'New Task', new_task_path, remote: true %>
    <div id="task-form" style="display:none;"></div>
  </div>
</div>

<br>


